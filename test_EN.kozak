Function matrix_add(a, b) {
    rows := matrix_size(a)[0];
    cols := matrix_size(a)[1];
    result := create_matrix(rows, cols, 0);
    
    For (i := 0; i < rows; i++) {
        For (j := 0; j < cols; j++) {
            result[i][j] := a[i][j] + b[i][j];
        }
    }
    
    Return result;
}

Function matrix_multiply_scalar(mat, scalar) {
    rows := matrix_size(mat)[0];
    cols := matrix_size(mat)[1];
    result := create_matrix(rows, cols, 0);
    
    For (i := 0; i < rows; i++) {
        For (j := 0; j < cols; j++) {
            result[i][j] := mat[i][j] * scalar;
        }
    }
    
    Return result;
}

